#!/bin/bash

bin_dir=$(dirname $0)
cd ${bin_dir}/..
home_dir=${PWD}
cd - > /dev/null 2>&1

classpath=
for f in $(ls ${home_dir}/lib); do
  classpath=${classpath}:${home_dir}/lib/${f}
done

if [[ $(uname -a | grep -i cygwin) != "" ]]; then
  classpath=$(cygpath -wp ${classpath})
  home_dir=$(cygpath -wa ${home_dir})
fi

java -cp ${classpath} org.savantbuild.runtime.Main $@
